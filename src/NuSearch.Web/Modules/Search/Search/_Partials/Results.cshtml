@using NuSearch.Web.Modules.Search
@using NuSearch.Web.Modules.Search.Search
@model NuSearch.Web.Modules.Search.Search.SearchViewModel
<div class="row">
	<div class="col-lg-9">
		@foreach (var hit in Model.Hits)
		{
			var package = hit.Source;
			var lastVersion = package.Versions.LastOrDefault();
			<div class="media search-result">
				<div class="media-left">
					<a href="@Model.UrlFor(package)">
						@if (string.IsNullOrEmpty(package.IconUrl))
						{
							<img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
						}
						else
						{

							<img class="media-object" data-src="holder.js/64x64" alt="64x64" src="@package.IconUrl" data-holder-rendered="true" style="width: 64px; height: 64px;">
						}
					</a>
				</div>
				<div class="media-body">
					<h3 class="media-heading text-info">@hit.Id</h3>
					<h4 class="text-humble">
						<span><span class="glyphicon glyphicon-download-alt"></span> @package.DownloadCount</span> 
						| <span><span class="glyphicon glyphicon-time"></span> @lastVersion.LastUpdated</span>
						| <span><span class="glyphicon glyphicon-bookmark"></span> @lastVersion.Version</span>
						| <span><span class="glyphicon glyphicon-flash"></span>query score: @hit.Score</span>
					</h4>
					<h4>@package.Summary</h4>
				</div>
			</div>
		}
	</div>
	<div class="col-lg-3">
		@Html.Partial("Aggregations", Model)
	</div>
</div>